#!/usr/bin/env bash


if [ "$#" -ne 3 ]; then
  echo "Usage: $0 <DEVICE> <ROOTFS> <USERSFS>"
  exit 10
fi

DEVICE=$1
PARTITION=${DEVICE}2

ROOTFS=$2
USERSFS=$3


# Copy rootfs & usersfs partition images on USB device

SIZE_ROOTFS=$(stat -L -c%s "$ROOTFS")
SIZE_ROOTFS=$(($SIZE_ROOTFS/512))

dd if=$ROOTFS  of=$DEVICE                   &&
dd if=$USERSFS of=$DEVICE seek=$SIZE_ROOTFS || exit 11
sync


# Create new partition for usersfs on USB device

cat fdisk-installUSB.txt | fdisk $DEVICE || exit 12
sync

# Resize usersfs partition to fill remaining free space

e2fsck -f -y $PARTITION
resize2fs -p $PARTITION || exit 13
sync
