#!/usr/bin/env bash

# This script compiles from scratch a Node.js executable and its needed
# libraries and shell utils to offer a Node.js REPL from cold boot


set -o pipefail


TOOLCHAIN=`node -p "require('nodeos-cross-toolchain')"`

source $TOOLCHAIN/scripts/adjustEnvVars.sh || exit $?

PATH=$TOOLCHAIN/bin:$PATH


# Clean object dir and return the input error
function err(){
  rmStep $STEP_DIR
  exit $1
}


#
# Define steps paths
#

OBJ_INIT=$OBJECTS/init
OBJ_NODE=$OBJECTS/node
OBJ_RELEASE=$OBJECTS/os-release
OBJ_LINUX=$OBJECTS/linux
OUT_DIR=`pwd`/out/$CPU


#
# init
#

SRC_DIR=`pwd`/deps/init
STEP_DIR=$OBJ_INIT

if [[ ! -f $STEP_DIR && $PLATFORM != vagga ]]; then
  echo -e "${WHT}Compiling init${CLR}"

  # Delete previous kernel
  rm -rf $OBJ_LINUX

  (
#    cd $STEP_DIR
    cd $SRC_DIR && $MAKE clean  # nodeos-init don't support out-of-tree builds yet

    # Compile
    CC=$TARGET-gcc \
    $MAKE          || exit 10

    # Strip binary
    $TARGET-strip init || exit 11
  ) || err $?

  # Install
  mkdir -p $OBJECTS          &&
  cp $SRC_DIR/init $STEP_DIR || exit 12

  echo -e "${GRN}Successfully compiled init${CLR}"
fi


#
# Node.js
#

SRC_DIR=`pwd`/deps/node
STEP_DIR=$OBJ_INIT

if [[ ! -f $STEP_DIR ]]; then
  echo -e "${WHT}Compiling Node.js${CLR}"

  # Delete previous kernel
  rm -rf $OBJ_LINUX

  (
#    cd $STEP_DIR
    cd $SRC_DIR && $MAKE clean  # Node.js don't support out-of-tree builds yet

    # Configure
#    CROSS_COMPILE="$TARGET-"  \
    CC=$TARGET-gcc            \
    CXX=$TARGET-g++           \
    $SRC_DIR/configure        \
        --prefix=/            \
        --dest-cpu=$NODE_ARCH \
        --dest-os=linux       \
        --without-dtrace      \
        --without-npm         \
        --without-snapshot    || exit 20

    # Compile
    $MAKE || exit 21

    # Strip binary
    $TARGET-strip node || exit 22
  ) || err $?

  # Install
  mkdir -p $OBJECTS          &&
  cp $SRC_DIR/node $STEP_DIR || exit 23

  # Exec test
#  scripts/testNode --cpu $CPU || exit 24

  # # [Hack] Try to exec test five times before throwing error
  # # SemaphoreCI is giving random errors at this point...
  # i="1"
  # while [ `scripts/testNode --cpu $CPU` ]; do
  #   if [ $i -eq 5 ]; then
  #     exit 24
  #   fi
  #
  #   i=$[$i+1]
  #   echo Running test the $i time...
  # done

  echo -e "${GRN}Successfully compiled Node.js${CLR}"
fi


#
# NodeOS version
#

STEP_DIR=$OBJ_RELEASE

mkdir -p `dirname $STEP_DIR`

VERSION=`node -p "require('./package.json').version"` || VERSION="(unknown)"
CODENAME="Amanda"
BUILD_ID=`node -p "(new Date()).toISOString().substr(0,10)"`

eval "echo \"$(< resources/os-release)\"" > $STEP_DIR || err 30


#
# Wrap the system up and pack it
#

SRC_DIR=deps/linux
STEP_DIR=$OBJ_LINUX

mkdir -p $STEP_DIR

# Generate initramfs configuration file
cat resources/cpio_root.txt > $STEP_DIR/cpio.txt || err 30
if [[ $PLATFORM != vagga ]]; then
  eval "echo \"$(< resources/cpio_standalone.txt)\"" >> $STEP_DIR/cpio.txt || err 31
else
  cat resources/cpio_vagga.txt >> $STEP_DIR/cpio.txt || err 32
fi
eval "echo \"$(< resources/cpio_common.txt)\"" >> $STEP_DIR/cpio.txt || err 33

case $PLATFORM in
  docker|vagga)
    if [[ ! -f $OUT_DIR/barebones.tar ]]; then
      (
        cd $SRC_DIR/usr     &&
        $MAKE gen_init_cpio || exit 40

        mkdir -p         $STEP_DIR/usr &&
        mv gen_init_cpio $STEP_DIR/usr || exit 41
      ) || err $?

      mkdir -p $OUT_DIR                              &&
      $STEP_DIR/usr/gen_init_cpio $STEP_DIR/cpio.txt | \
        cpio2tar > $OUT_DIR/barebones.tar            || err 42

      rm -f $STEP_DIR/.config || err 43
    fi

    ln -sf $CPU/barebones.tar out/latest || err 44
  ;;

  pc_* | raspberry_* | versatilepb_*)
    if [[ `ls $STEP_DIR | wc -l` -eq 1 ]] \
    || [[ ! -f $OUT_DIR/linux          ]]; then
      echo -e "${WHT}Compiling Linux${CLR}"

      # Delete previous products
      rm -f $OUT_DIR/linux || exit 50

      MAKE="$MAKE O=$STEP_DIR ARCH=$ARCH CROSS_COMPILE=$TARGET-"

      (
        cd $SRC_DIR

        # Configure
        $MAKE1 mrproper || exit 51

        case $PLATFORM in
          pc_*)
            DEFCONFIG=${CPU_FAMILY}_defconfig
          ;;

          raspberry_*)
            DEFCONFIG=bcm2835_defconfig
          ;;

          *)
            echo "Unknown platform '$PLATFORM'"
            exit 52
          ;;
        esac

        $MAKE $DEFCONFIG || exit 53
      ) || err $?

      # Set NodeOS custom configurations
      eval "echo \"$(< resources/config_common)\"" >> $STEP_DIR/.config || err 54

      eval "echo \"$(< resources/config_workstation)\"" >> $STEP_DIR/.config || err 54
#      eval "echo \"$(< resources/config_mainframe)\"" >> $STEP_DIR/.config || err 54

      (
        cd $SRC_DIR

        # Fix and clean configuration
        $MAKE oldnoconfig || exit 55

        # Compile
        $MAKE || exit 56
      ) || err $?

      # Install
      mkdir -p $OUT_DIR || exit 57

      case $PLATFORM in
        pc_*)
          cp $STEP_DIR/arch/$ARCH/boot/bzImage $OUT_DIR/linux || exit 58
        ;;

        raspberry_*)
          cp $STEP_DIR/arch/$ARCH/boot/zImage $OUT_DIR/linux || exit 48
        ;;

        *)
          echo "Unknown platform '$PLATFORM'"
          exit 61
        ;;
      esac

      # Exec test
#      scripts/test --cpu $CPU || exit 62

      # [Hack] Try to exec test five times before throwing error
      # SemaphoreCI is giving random errors at this point...
      i="1"
      while [ `scripts/test --cpu $CPU` ]; do
        if [ $i -eq 5 ]; then
          exit 62
        fi

        i=$[$i+1]
        echo Running test the $i time...
      done

      echo -e "${GRN}Successfully compiled Linux${CLR}"
    fi

    ln -sf $CPU/linux out/latest || exit 63
  ;;

  *)
    echo -e "${RED}Unknown platform '$PLATFORM'${CLR}"
    exit 70
  ;;
esac


echo -e "${GRN}Successfully built 'barebones'${CLR}"
